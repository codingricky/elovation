
    <tr>
      <td><%= rating_counter + 1 %></td>
      <td>
        <div class='player'>
          <%= player_avatar_tiny(rating.player) %>

          <%= link_to rating.player.name, player_game_path(rating.player, game) %>
        </div>
      </td>

      <td><%= rating.value %></td>
      <td><%= rating.player.total_wins(rating.game) %></td>
      <td><%= rating.player.total_losses(rating.game) %></td>
      <% if game.allow_ties %>
          <td><%= rating.player.total_ties(rating.game) %></td>
      <% end %>
      <td><%= rating.player.results.for_game(rating.game).size %></td>
      <td><%= number_to_percentage(rating.player.win_loss_ratio(rating.game), :precision => 0) %></td>


    </tr>

